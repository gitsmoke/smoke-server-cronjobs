#!/bin/sh

# Exit on errors
trap 'fail' ERR
fail () {
    code=$?
    echo "Failed with exit code $code"
    exit 1
}

if test -z "$SMOKE_GIT"; then
    echo "$0: You must supply a path to a Git dir as SMOKE_GIT="
    exit 1
fi

if test -z "$SMOKE_GIT_PUSH_URL"; then
    echo "$0: You must supply a Git push url SMOKE_GIT_PUSH_URL="
    exit 1
fi

cd $SMOKE_GIT
git remote rm origin || :
git remote add origin $SMOKE_GIT_PUSH_URL || :
git push origin -u master
